  + claim_id : INT <<PK>>
  + plot_id : INT <<FK>>
  + sancion_type_id : INT <<FK>>
  + created_date : LocalDateTime
  + last_modified_at : LocalDateTime
  + last_modified_by : VARCHAR(255)
